<%= form_with model: user do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :state %>
        <%= f.select(:state_id, State.all.collect {|s| [s.name, s.id]}, {:prompt => 'Select State'}) %>
    </div>

    <div>
        <%= f.label :city %>
        <%= f.select(:city_id, {}, {:prompt => 'Select City'},{id: 'city'}) %>
    </div>

    <div>
        <%= f.submit %>
    </div>
    
<% end %>